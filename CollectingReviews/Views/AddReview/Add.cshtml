@model CollectingReviews.Models.Review

@{
    Layout = Layout;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <h4>Review</h4>
    <hr />
        <div class="row">
            <div class="col-md-4">

                <form asp-controller="AddReview" asp-action="Add" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input type="text" asp-for="Name" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="OrganizationName" class="control-label"></label>
                        <input type="text" asp-for="OrganizationName" class="form-control" required />
                    </div>
                    <div class="col-12">
                        <label asp-for="Address" for="inputAddress" class="form-label">Адрес</label>
                        <input asp-for="Address" type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="GoodFeedback" class="control-label"></label>
                        <textarea asp-for="GoodFeedback" class="form-control" maxlength="1000" required></textarea>
                    </div>
                    <div class="form-group">
                        <label asp-for="BadFeedback" class="control-label"></label>
                        <textarea asp-for="BadFeedback" class="form-control" maxlength="1000"></textarea>
                    </div>
                    <label asp-for="Coments">Комментарии</label>
                    <div class="form-floating">
                        <textarea asp-for="Coments" class="form-control" placeholder="Leave a comment here"></textarea>
                    </div>
                    <label asp-for="Estimation" class="control-label"></label>
                    <div class="col-auto">
                        <label asp-for="Estimation" class="visually-hidden" for="autoSizingSelect">Предпочтение</label>
                        <select asp-for="Estimation" class="form-select" id="autoSizingSelect" required>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <input type ="submit" value="Добавить" />
                    </div>
                </form>
            </div>
        </div>

</body>
</html>