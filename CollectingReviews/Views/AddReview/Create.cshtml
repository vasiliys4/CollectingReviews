@model CollectingReviews.Models.Review

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <h4>Review</h4>
    <hr />
    <form class="row g-3">
        <div class="row">
            <div class="col-md-4">
                <form method="post" asp-action="Index" asp-antiforgery="true" enctype="multipart/form-data">
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Name">Название</label>
                        </div>
                        <div class="col-8">
                            <input type="text" asp-for="Name" class="form-control" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="OrganizationName">Цена</label>
                        </div>
                        <div class="col-8">
                            <input type="text" asp-for="OrganizationName" class="form-control" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Address">Описание</label>
                        </div>
                        <div class="col-8">
                            <input type="text" asp-for="Address" class="form-control" rows="3" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="GoodFeedback">Описание</label>
                        </div>
                        <div class="col-8">
                            <textarea asp-for="GoodFeedback" class="form-control" rows="3" required></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="BadFeedback">Описание</label>
                        </div>
                        <div class="col-8">
                            <textarea asp-for="BadFeedback" class="form-control" rows="3" required></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Coments">Описание</label>
                        </div>
                        <div class="col-8">
                            <textarea asp-for="Coments" class="form-control" rows="3" required></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Estimation">Описание</label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Estimation" class="form-control" rows="3" required>
                        </div>
                    </div>
                    <div class="text-right">
                        <button type="submit" class="btn btn-info">Добавить</button>
                    </div>
                </form>
            </div>
        </div>
    </form>

